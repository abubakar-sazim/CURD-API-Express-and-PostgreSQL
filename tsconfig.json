{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}